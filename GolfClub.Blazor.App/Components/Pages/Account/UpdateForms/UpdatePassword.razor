@using GolfClub.BLL.Models.Domain

<h2 class="text-success mb-3">Change Password</h2>
<p class="mb-4">Update your password here</p>

    <EditForm Model="@model" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <div class="row">
            <div class="mb-4">
                <label for="old-password" class="form-label">Old Password</label>
                <InputText id="old-password" class="form-control" @bind-Value="model.OldPassword" />
            </div>
        </div>
        <div class="row">
            <div class="mb-4">
                <label for="new-password" class="form-label">New Password</label>
                <InputText id="new-password" class="form-control" @bind-Value="model.NewPassword" />
            </div>
        </div>
        <div class="row">
            <div class="mb-4">
                <label for="repeat-password" class="form-label">Repeat Password</label>
                <InputText id="repeat-password" class="form-control" @bind-Value="model.RepeatPassword" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </EditForm>

@code {

    [SupplyParameterFromForm]
    private UpdatePasswordModel model { get; set; }

    private Task HandleValidSubmit()
    {
        return null;
    }
}
