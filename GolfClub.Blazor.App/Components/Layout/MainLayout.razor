@inherits LayoutComponentBase

<AuthorizeView>
    <NotAuthorized>
        @Body
    </NotAuthorized>
    <Authorized>

        <header class="bg-dark text-white py-4 m-0">
            <div class="container d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">Golf Club Mega Sale!</h1>
                <p class="mb-0">Get 25% off on all golf clubs - Limited time offer!</p>
            </div>
        </header>

        <div class="container">
            <div class="row">
                <aside class="col-md-3 px-0">
                    <NavMenu />
                </aside>

                <main class="col-md-9 p-3">
                    <div class=" bg-white p-3 rounded" style="min-height: 445px;">
                        @Body
                    </div>
                </main>
            </div>
        </div>

    </Authorized>
</AuthorizeView>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>


